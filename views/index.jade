  script(type="text/javascript").
    $(document).ready(function() {
      var height = $(window).height();
      var mainHeight = height * 0.65;
      var offset = $("#register").height();

      $('#main > #header > #logo').css("padding-top", mainHeight*0.15);
      $('#main > #header > #logo').css("height", height*0.25);
      if(height > 700) {
        $('#main').css("min-height", height);
        $('#main').css("max-height", height);
      }
      else {
        $('#main').css("min-height", 700);
        $('#main').css("max-height", 700);
      }

      if(height > 1000) {
        $('#main > .info_block').css("padding-top", 100);
      }

      
      $("#register").css("margin-top", -offset*0.7);
      $("#info").css("padding-top", offset*2);

      var info_height = height * 0.35 - offset*2;
      $('#info').css("height", info_height);
      $('.info_block').css("max-height", info_height);

      function initialize() {
        var styles = [{"featureType":"landscape.natural","elementType":"geometry.fill","stylers":[{"visibility":"on"},{"color":"#e0efef"}]},{"featureType":"poi","elementType":"geometry.fill","stylers":[{"visibility":"on"},{"hue":"#1900ff"},{"color":"#c0e8e8"}]},{"featureType":"landscape.man_made","elementType":"geometry.fill"},{"featureType":"road","elementType":"geometry","stylers":[{"lightness":100},{"visibility":"simplified"}]},{"featureType":"road","elementType":"labels","stylers":[{"visibility":"on"}]},{"featureType":"water","stylers":[{"color":"#7dcdcd"}]},{"featureType":"transit.line","elementType":"geometry","stylers":[{"visibility":"on"},{"lightness":700}]}];
        var location = new google.maps.LatLng(37.779776, -122.401833); 

        var mapOptions = {
          center: location,
          zoom: 16,
          disableDefaultUI: true,
          scrollwheel: false,
          draggable: false,
          disableDoubleClickZoom: true,
          styles: styles
        };
        var map = new google.maps.Map(document.getElementById("details"), mapOptions);

        var marker = new google.maps.Marker({
          position: location,
          map: map
        });
      }
      google.maps.event.addDomListener(window, 'load', initialize);
    });

